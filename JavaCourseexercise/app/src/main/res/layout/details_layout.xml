<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_progress"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_course_name"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/teacher_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/teacher"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/week_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/edit_course_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_edit8"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>