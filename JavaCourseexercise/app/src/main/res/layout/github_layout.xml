<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_progress"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/jump_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_github1"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="欢迎关注我们\nhttps://github.com/BITxiao666/scholar"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/github_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_sure"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>
